<div class="col-12 col-md-10 offset-md-1">

  <div class="cntr txt-clr-white">
    <div class="container">
      <div class="logo-large">reservouz</div>
      <div class="title">time to make a reservation</div>
    </div>
  </div>
  <br />
  
  <div class="row cntr">
    <div class="column">
      <% if user_signed_in? && current_user.venue_id %>
        <a href="<%= admin_venue_path(current_user.venue_id) %>">
      <% else %>
        <a href="<%= new_user_registration_path %>">
      <% end %>
        <div class="card">
          <div class="card-body">
            <% card_text = "sign up now and use reservouz for your venue" %>
            <% if user_signed_in? && current_user.venue_id %>
              <% card_text = "manage my venue with reservouz control panel" %>
            <% end %>
            <h5 class="card-title txt-clr-gray"><%= card_text %></h5>
            <img src="/assets/venue.jpg" width="100%" height="100%" alt="sign up" /><br />
          </div>
        </div>
      </a>
    </div>
    <div class="column">
      <a href="<%= about_path %>">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title txt-clr-gray">find out more about what reservouz can do for you</h5>
            <img src="/assets/info.jpg" width="70%" height="70%" alt="sign up" /><br />
          </div>
        </div>
      </a>
    </div>
    <div class="column">
      <a href="<%= reservations_path %>">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title txt-clr-gray">use reservouz to make a reservation for yourself</h5>
            <img src="/assets/reserve.jpg" width="70%" height="70%" alt="sign up" /><br />
          </div>
        </div>
      </a>
    </div>
  </div>
  <br />

  <% if user_signed_in? && current_user.venue_id %>
    <div class="row">
      <div class="one-column cntr">
        <a href="<%= admin_venue_path(current_user.venue_id) %>">
          <div class="title">go to my venue</div>
        </a>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="one-column cntr">
      <a target="_blank" href="https://apps.apple.com/us/app/reservouz/id1558370820"/>
        <img src="/assets/appstore.png" class="responsive" alt="download reservouz">
      </a>
    </div>
  </div>

</div>

